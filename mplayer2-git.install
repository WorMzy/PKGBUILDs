post_install()
{
	if type update-desktop-database &> /dev/null; then
		update-desktop-database -q
	fi

  mkfontdir /usr/share/fonts/OSD
  mkfontscale /usr/share/fonts/OSD
  echo -n "Updating font cache... "
  fc-cache -f 2>/dev/null
  echo "done!"
}

post_upgrade()
{
	post_install
}

post_remove()
{
	if type update-desktop-database &> /dev/null; then
		update-desktop-database -q
	fi
}
